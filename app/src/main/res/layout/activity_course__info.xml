<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course_Info">

    <android.support.v7.widget.Toolbar
        android:id="@+id/coursetoolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="11sp"
        android:layout_marginTop="50dp"
        android:text="Course Name"
        android:textSize="20sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="11sp"
        android:text="Start Date"
        android:textSize="20sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="11sp"
        android:text="End Date"
        android:textSize="20sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="11sp"
        android:text="Status"
        android:textSize="20sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="11sp"
        android:text="Term"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11sp"
        android:layout_marginTop="225dp"
        android:text="Mentor Name"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="11sp"

        android:text="Mentor Phone"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginLeft="11sp"
        android:layout_marginTop="295dp"

        android:text="Mentor Email"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/coursename"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/startdate"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/enddate"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/status"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />


    <EditText
        android:id="@+id/termname"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/mentorname"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/mentorphone"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/mentoremail"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="76dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="-11dp"
        android:layout_marginTop="365dp"
        android:layout_toEndOf="@+id/ViewAssessmentButton"
        android:text="Save"
        android:visibility="invisible"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/ViewAssessmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp"
        android:text="View Assessment" />

    <Button
        android:id="@+id/ViewNotes"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="365dp"
        android:layout_marginRight="0dp"
        android:text="Notes" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="1sp"
        android:textSize="20sp"
        android:text="Reminders" />

    <CheckBox
        android:id="@+id/updatecoursestartcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="330dp"
        android:text="Course Start"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/updatecourseendcheck"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="229dp"
        android:layout_marginLeft="229dp"
        android:layout_marginTop="330dp"
        android:text="Course End"
        android:textSize="15dp" />


</RelativeLayout>