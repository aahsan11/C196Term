<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"

    tools:context=".TermDetails"
    tools:layout_editor_absoluteY="25dp">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/root_course_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    app:elevation="0dp"
                    android:layout_alignParentTop="true"


                    android:background="@color/colorPrimary"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat">


                </android.support.v7.widget.Toolbar>


                <TextView


                    android:layout_width="129dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="128dp"

                    android:text="Term Name"
                    android:textAlignment="viewEnd"

                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="DuplicateIds,RtlCompat" />


                <EditText
                    android:id="@+id/termname"

                    android:layout_width="192dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="128dp"
                    android:layout_marginLeft="128dp"

                    android:layout_marginTop="108dp"
                    android:textAlignment="viewEnd"

                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat" />

                <TextView


                    android:layout_width="116dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginTop="200dp"
                    android:text="Start Date"

                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="DuplicateIds,RtlCompat" />

                <EditText
                    android:id="@+id/termstart"

                    android:layout_width="189dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="128dp"
                    android:layout_marginLeft="128dp"

                    android:layout_marginTop="180dp"
                    android:textAlignment="viewEnd"

                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat" />


                <TextView
                    android:id="@+id/text_course_code"

                    android:layout_width="128dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginTop="270dp"
                    android:text="Start Date"

                    android:textAlignment="viewEnd"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/termend"

                    android:layout_width="189dp"
                    android:layout_height="59dp"
                    android:layout_marginStart="128dp"
                    android:layout_marginLeft="128dp"

                    android:layout_marginTop="248dp"
                    android:textAlignment="viewEnd"

                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlCompat" />


                <Button
                    android:id="@+id/ViewCourses"

                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="120dp"

                    android:layout_marginTop="364dp"
                    android:text="View Courses"


                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



        </android.support.constraint.ConstraintLayout>

</ScrollView>