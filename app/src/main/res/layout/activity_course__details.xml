<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course_Details">

    <TextView
        android:layout_width="124dp"
        android:layout_height="41dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="55dp"
        android:text="Course Name"
        android:textSize="18sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Start Date" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="End Date" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Status" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Term" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="195dp"
        android:text="Mentor Name"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="265dp"
        android:text="Mentor Phone"
        android:textSize="18sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="303dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Mentor Email" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="351dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Reminders" />


    <EditText
        android:id="@+id/CourseName"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. C196" />

    <EditText
        android:id="@+id/StartDate"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. 02/14/2019" />

    <EditText
        android:id="@+id/EndDate"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. 02/19/2019" />

    <EditText
        android:id="@+id/Status"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. In Progress" />


    <EditText
        android:id="@+id/TermName"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/MentorName"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. John" />

    <EditText
        android:id="@+id/MentorPhone"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. 202-888-8765" />

    <EditText
        android:id="@+id/MentorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:hint="ex. john2@yahoo.com" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/coursedetailstoolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        tools:ignore="RtlCompat">

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp"
        android:text="Save" />


    <CheckBox
        android:id="@+id/coursestartcheck"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="113dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="352dp"
        android:text="Course Start"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/courseendcheck"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="235dp"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="358dp"
        android:text="Course End"
        android:textSize="15dp" />


</RelativeLayout>