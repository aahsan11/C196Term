<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course_Info">

    <android.support.v7.widget.Toolbar
        android:id="@+id/coursetoolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="38dp"
        android:text="Course Name"
        android:textSize="18sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="15sp"
        android:text="Start Date"
        android:textSize="18sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="15sp"
        android:text="End Date"
        android:textSize="18sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="119dp"
        android:layout_marginLeft="15sp"
        android:text="Status"
        android:textSize="18sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="144dp"
        android:layout_marginLeft="15sp"
        android:text="Term"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="171dp"
        android:text="Mentor Name"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="198dp"
        android:layout_marginLeft="15sp"

        android:text="Mentor Phone"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="222dp"

        android:text="Mentor Email"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/coursename"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="90dp" />

    <EditText
        android:id="@+id/startdate"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="90dp" />

    <EditText
        android:id="@+id/enddate"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/status"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp" />


    <EditText
        android:id="@+id/termname"
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/mentorname"
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/mentorphone"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/mentoremail"
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="285dp"
        android:layout_centerHorizontal="true"
        android:text="Save"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/ViewAssessmentButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="285dp"
        android:text="View Assessment" />
    <Button
        android:id="@+id/ViewNotes"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="285dp"
        android:layout_alignParentRight="true"
        android:text="Notes"
        />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="257dp"
        android:layout_marginLeft="12sp"
        android:textSize="20sp"
        android:text="Reminders" />

    <CheckBox
        android:id="@+id/updatecoursestartcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="260dp"
        android:text="Course Start"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/updatecourseendcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="283dp"
        android:layout_marginLeft="283dp"
        android:layout_marginTop="260dp"
        android:text="Course End"
        android:textSize="15dp" />

</RelativeLayout>