<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course_Details">

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="38dp"
        android:text="Course"
        android:textSize="18sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Start Date" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="End Date" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="119dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Status" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="173dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Term" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="146dp"
        android:text="Mentor Name"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="200dp"
        android:text="Mentor Phone"
        android:textSize="18sp" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="227dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Mentor Email" />

    <TextView
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginTop="254dp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:text="Reminders" />


    <EditText
        android:id="@+id/CourseName"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. C196" />

    <EditText
        android:id="@+id/StartDate"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. 02/14/2019" />

    <EditText
        android:id="@+id/EndDate"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. 02/19/2019" />

    <EditText
        android:id="@+id/Status"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. Active" />


    <EditText
        android:id="@+id/TermName"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/MentorName"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. John" />

    <EditText
        android:id="@+id/MentorPhone"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. 202-888-8765" />

    <EditText
        android:id="@+id/MentorEmail"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:hint="ex. john22@yahoo.com" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/coursedetailstoolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        tools:ignore="RtlCompat">

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="283dp"
        android:text="Save" />


    <CheckBox
        android:id="@+id/coursestartcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="141dp"
        android:layout_marginTop="255dp"
        android:text="Course Start"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/courseendcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="270dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="255dp"
        android:text="Course End"
        android:textSize="15dp" />


</RelativeLayout>